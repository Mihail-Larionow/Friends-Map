<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/conversationPhoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/viewSup"
        app:layout_constraintBottom_toBottomOf="@+id/conversationPhoto"
        app:layout_constraintTop_toTopOf="@+id/conversationPhoto"
        app:layout_constraintStart_toEndOf="@+id/conversationPhoto"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/conversationName"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="0dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/viewSup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/conversationPhoto"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/lastMessage"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="0dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewSup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/conversationPhoto"
        android:ellipsize="end"
        android:maxLines="1" />

</androidx.constraintlayout.widget.ConstraintLayout>